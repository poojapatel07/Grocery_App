<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.i2c.groceryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1"
        android:usesCleartextTraffic="true"
        tools:node="replace"
        tools:targetApi="m">

        <activity android:name=".activity.SearchActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".activity.TodaySpecialActivity" />
        <activity android:name=".activity.BrandCompanyProductListActivity" />
        <activity android:name=".activity.ProductCategoryActivity" />
        <activity android:name=".activity.AlphaBaticScrollActivity" />
        <activity android:name=".activity.PaymentActivity" />
        <activity android:name=".activity.OrderSummaryActivity" />
        <activity android:name=".activity.RateAppActivty" />
        <activity android:name=".activity.ContactUsActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.ChangeLanguageActivity" />
        <activity android:name=".activity.Personal_InfoActivty" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.Become_prime_memberActivity" />
        <activity android:name=".activity.ViewAllOrderSummaryActivity" />
        <activity android:name=".activity.MyOrderActivity" />
        <activity android:name=".activity.MyFavouriteActivity" />
        <activity android:name=".activity.NotifictionActivity" />
        <activity android:name=".activity.TradeOfferActivity" />
        <activity android:name=".activity.ProductDetailActivity" />
        <activity android:name=".activity.FreebiesActivity" />
        <activity android:name=".activity.AllSubCategoryActivity" />
        <activity android:name=".activity.SelectRoleActivity" />
        <activity android:name=".activity.OTPVerificationActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginByOTPActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.LanguageSelectionActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginRegisterActivity" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>